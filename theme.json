{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "useRootPaddingAwareAlignments": true,
        "color": {
            "custom": true,
            "customGradient": true,
            "defaultPalette": false,
            "defaultGradients": false,
            "palette": [
                {
                    "slug": "primary",
                    "color": "#1877F2",
                    "name": "Primary"
                },
                {
                    "slug": "primary-dark",
                    "color": "#1565c0",
                    "name": "Primary Dark"
                },
                {
                    "slug": "primary-light",
                    "color": "#42a5f5",
                    "name": "Primary Light"
                },
                {
                    "slug": "secondary",
                    "color": "#f97316",
                    "name": "Secondary"
                },
                {
                    "slug": "accent",
                    "color": "#fb923c",
                    "name": "Accent"
                },
                {
                    "slug": "dark",
                    "color": "#0f172a",
                    "name": "Dark"
                },
                {
                    "slug": "dark-lighter",
                    "color": "#1f2937",
                    "name": "Dark Lighter"
                },
                {
                    "slug": "light",
                    "color": "#f9fafb",
                    "name": "Light"
                },
                {
                    "slug": "white",
                    "color": "#ffffff",
                    "name": "White"
                },
                {
                    "slug": "success",
                    "color": "#10b981",
                    "name": "Success"
                },
                {
                    "slug": "warning",
                    "color": "#f59e0b",
                    "name": "Warning"
                },
                {
                    "slug": "error",
                    "color": "#ef4444",
                    "name": "Error"
                }
            ],
            "gradients": [
                {
                    "slug": "primary-gradient",
                    "gradient": "linear-gradient(135deg, #1877F2 0%, #f97316 100%)",
                    "name": "Primary Gradient"
                },
                {
                    "slug": "hero-gradient",
                    "gradient": "linear-gradient(135deg, #0f172a 0%, #1877F2 50%, #f97316 100%)",
                    "name": "Hero Gradient"
                },
                {
                    "slug": "dark-gradient",
                    "gradient": "linear-gradient(180deg, #020617 0%, #0f172a 100%)",
                    "name": "Dark Gradient"
                }
            ]
        },
        "typography": {
            "customFontSize": true,
            "fluid": true,
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "0.875rem",
                    "name": "Small"
                },
                {
                    "slug": "medium",
                    "size": "1rem",
                    "name": "Medium"
                },
                {
                    "slug": "large",
                    "size": "1.125rem",
                    "name": "Large"
                },
                {
                    "slug": "x-large",
                    "size": "1.5rem",
                    "name": "Extra Large"
                },
                {
                    "slug": "xx-large",
                    "size": "2.25rem",
                    "name": "Huge"
                },
                {
                    "slug": "xxx-large",
                    "size": "3rem",
                    "name": "Gigantic"
                }
            ],
            "fontFamilies": [
                {
                    "fontFamily": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif",
                    "slug": "primary",
                    "name": "Primary (Inter)"
                },
                {
                    "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif",
                    "slug": "system",
                    "name": "System Font"
                },
                {
                    "fontFamily": "'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, monospace",
                    "slug": "mono",
                    "name": "Monospace"
                }
            ]
        },
        "spacing": {
            "customSpacingSize": true,
            "spacingScale": {
                "steps": 0
            },
            "spacingSizes": [
                {
                    "slug": "10",
                    "size": "0.25rem",
                    "name": "XS"
                },
                {
                    "slug": "20",
                    "size": "0.5rem",
                    "name": "Small"
                },
                {
                    "slug": "30",
                    "size": "1rem",
                    "name": "Medium"
                },
                {
                    "slug": "40",
                    "size": "1.5rem",
                    "name": "Large"
                },
                {
                    "slug": "50",
                    "size": "2rem",
                    "name": "XL"
                },
                {
                    "slug": "60",
                    "size": "3rem",
                    "name": "XXL"
                },
                {
                    "slug": "70",
                    "size": "4rem",
                    "name": "Huge"
                }
            ],
            "units": ["px", "em", "rem", "%", "vh", "vw"]
        },
        "layout": {
            "contentSize": "800px",
            "wideSize": "1200px"
        },
        "blocks": {
            "core/button": {
                "border": {
                    "radius": true
                }
            },
            "core/pullquote": {
                "border": {
                    "color": true,
                    "radius": true,
                    "style": true,
                    "width": true
                }
            },
            "core/navigation": {
                "typography": {
                    "fontSizes": true
                }
            }
        },
        "border": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true
        },
        "custom": {
            "spacing": {
                "xs": "0.25rem",
                "sm": "0.5rem",
                "md": "1rem",
                "lg": "1.5rem",
                "xl": "2rem",
                "2xl": "3rem"
            },
            "typography": {
                "line-height": {
                    "tight": 1.25,
                    "normal": 1.5,
                    "relaxed": 1.75
                }
            },
            "border-radius": {
                "sm": "0.25rem",
                "md": "0.5rem",
                "lg": "0.75rem",
                "xl": "1rem",
                "full": "9999px"
            }
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--dark)",
            "text": "var(--wp--preset--color--white)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--primary)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.6"
        },
        "spacing": {
            "blockGap": "1.5rem",
            "padding": {
                "left": "var(--wp--preset--spacing--30)",
                "right": "var(--wp--preset--spacing--30)"
            }
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontSize": "clamp(2rem, 5vw, 2.25rem)",
                    "fontWeight": "700",
                    "lineHeight": "1.25"
                },
                "color": {
                    "text": "var(--wp--preset--color--white)"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "clamp(1.5rem, 4vw, 1.875rem)",
                    "fontWeight": "700",
                    "lineHeight": "1.25"
                },
                "color": {
                    "text": "var(--wp--preset--color--white)"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "clamp(1.25rem, 3vw, 1.5rem)",
                    "fontWeight": "600",
                    "lineHeight": "1.25"
                },
                "color": {
                    "text": "var(--wp--preset--color--white)"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "1.25rem",
                    "fontWeight": "600",
                    "lineHeight": "1.25"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "1.125rem",
                    "fontWeight": "600",
                    "lineHeight": "1.25"
                }
            },
            "h6": {
                "typography": {
                    "fontSize": "1rem",
                    "fontWeight": "600",
                    "lineHeight": "1.25"
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--primary-light)"
                    }
                }
            },
            "button": {
                "border": {
                    "radius": "0.5rem"
                },
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--white)"
                },
                "typography": {
                    "fontWeight": "500",
                    "fontSize": "var(--wp--preset--font-size--medium)"
                },
                "spacing": {
                    "padding": {
                        "top": "0.5rem",
                        "bottom": "0.5rem",
                        "left": "1.5rem",
                        "right": "1.5rem"
                    }
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--primary-dark)"
                    }
                }
            }
        },
        "blocks": {
            "core/site-title": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontWeight": "700"
                },
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--white)"
                        },
                        ":hover": {
                            "color": {
                                "text": "var(--wp--preset--color--primary)"
                            }
                        }
                    }
                }
            },
            "core/quote": {
                "border": {
                    "left": {
                        "color": "var(--wp--preset--color--primary)",
                        "width": "4px",
                        "style": "solid"
                    }
                },
                "color": {
                    "background": "rgba(24, 119, 242, 0.1)"
                },
                "spacing": {
                    "padding": {
                        "left": "1.5rem",
                        "top": "1rem",
                        "bottom": "1rem",
                        "right": "1rem"
                    }
                },
                "typography": {
                    "fontStyle": "italic"
                }
            },
            "core/code": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--mono)",
                    "fontSize": "var(--wp--preset--font-size--small)"
                },
                "color": {
                    "background": "var(--wp--preset--color--dark-lighter)",
                    "text": "var(--wp--preset--color--light)"
                },
                "spacing": {
                    "padding": {
                        "top": "1rem",
                        "bottom": "1rem",
                        "left": "1rem",
                        "right": "1rem"
                    }
                },
                "border": {
                    "radius": "0.5rem"
                }
            },
            "core/preformatted": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--mono)",
                    "fontSize": "var(--wp--preset--font-size--small)"
                },
                "color": {
                    "background": "var(--wp--preset--color--dark-lighter)",
                    "text": "var(--wp--preset--color--light)"
                },
                "spacing": {
                    "padding": {
                        "top": "1rem",
                        "bottom": "1rem",
                        "left": "1rem",
                        "right": "1rem"
                    }
                },
                "border": {
                    "radius": "0.5rem"
                }
            },
            "core/separator": {
                "border": {
                    "color": "rgba(255, 255, 255, 0.1)",
                    "width": "2px"
                }
            },
            "core/image": {
                "border": {
                    "radius": "0.5rem"
                }
            },
            "core/group": {
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--40)",
                        "bottom": "var(--wp--preset--spacing--40)"
                    }
                }
            },
            "core/columns": {
                "spacing": {
                    "margin": {
                        "bottom": "var(--wp--preset--spacing--40)"
                    }
                }
            },
            "core/cover": {
                "border": {
                    "radius": "0.75rem"
                }
            },
            "core/pullquote": {
                "border": {
                    "width": "0"
                },
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontStyle": "italic"
                }
            },
            "core/table": {
                "border": {
                    "color": "rgba(255, 255, 255, 0.1)"
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "header",
            "title": "Header",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "Footer",
            "area": "footer"
        }
    ],
    "customTemplates": [
        {
            "name": "page-full-width",
            "title": "Full Width Page",
            "postTypes": ["page"]
        },
        {
            "name": "page-no-title",
            "title": "Page Without Title",
            "postTypes": ["page"]
        }
    ]
}
