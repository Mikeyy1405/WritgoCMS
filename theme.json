{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "color": {
            "custom": true,
            "customGradient": true,
            "defaultPalette": false,
            "defaultGradients": false,
            "palette": [
                {
                    "slug": "primary",
                    "color": "#6366f1",
                    "name": "Primary"
                },
                {
                    "slug": "primary-dark",
                    "color": "#4f46e5",
                    "name": "Primary Dark"
                },
                {
                    "slug": "primary-light",
                    "color": "#818cf8",
                    "name": "Primary Light"
                },
                {
                    "slug": "secondary",
                    "color": "#8b5cf6",
                    "name": "Secondary"
                },
                {
                    "slug": "accent",
                    "color": "#06b6d4",
                    "name": "Accent"
                },
                {
                    "slug": "dark",
                    "color": "#1f2937",
                    "name": "Dark"
                },
                {
                    "slug": "light",
                    "color": "#f9fafb",
                    "name": "Light"
                },
                {
                    "slug": "white",
                    "color": "#ffffff",
                    "name": "White"
                },
                {
                    "slug": "success",
                    "color": "#10b981",
                    "name": "Success"
                },
                {
                    "slug": "warning",
                    "color": "#f59e0b",
                    "name": "Warning"
                },
                {
                    "slug": "error",
                    "color": "#ef4444",
                    "name": "Error"
                }
            ],
            "gradients": [
                {
                    "slug": "primary-gradient",
                    "gradient": "linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%)",
                    "name": "Primary Gradient"
                },
                {
                    "slug": "hero-gradient",
                    "gradient": "linear-gradient(135deg, #6366f1 0%, #06b6d4 100%)",
                    "name": "Hero Gradient"
                }
            ]
        },
        "typography": {
            "customFontSize": true,
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "0.875rem",
                    "name": "Small"
                },
                {
                    "slug": "medium",
                    "size": "1rem",
                    "name": "Medium"
                },
                {
                    "slug": "large",
                    "size": "1.125rem",
                    "name": "Large"
                },
                {
                    "slug": "x-large",
                    "size": "1.5rem",
                    "name": "Extra Large"
                },
                {
                    "slug": "xx-large",
                    "size": "2.25rem",
                    "name": "Huge"
                }
            ],
            "fontFamilies": [
                {
                    "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif",
                    "slug": "system",
                    "name": "System Font"
                },
                {
                    "fontFamily": "'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, monospace",
                    "slug": "mono",
                    "name": "Monospace"
                }
            ]
        },
        "spacing": {
            "customSpacingSize": true,
            "spacingSizes": [
                {
                    "slug": "10",
                    "size": "0.25rem",
                    "name": "XS"
                },
                {
                    "slug": "20",
                    "size": "0.5rem",
                    "name": "Small"
                },
                {
                    "slug": "30",
                    "size": "1rem",
                    "name": "Medium"
                },
                {
                    "slug": "40",
                    "size": "1.5rem",
                    "name": "Large"
                },
                {
                    "slug": "50",
                    "size": "2rem",
                    "name": "XL"
                },
                {
                    "slug": "60",
                    "size": "3rem",
                    "name": "XXL"
                },
                {
                    "slug": "70",
                    "size": "4rem",
                    "name": "Huge"
                }
            ],
            "units": ["px", "em", "rem", "%", "vh", "vw"]
        },
        "layout": {
            "contentSize": "1200px",
            "wideSize": "1400px"
        },
        "blocks": {
            "core/button": {
                "border": {
                    "radius": true
                }
            },
            "core/pullquote": {
                "border": {
                    "color": true,
                    "radius": true,
                    "style": true,
                    "width": true
                }
            }
        },
        "border": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true
        },
        "custom": {
            "spacing": {
                "xs": "0.25rem",
                "sm": "0.5rem",
                "md": "1rem",
                "lg": "1.5rem",
                "xl": "2rem",
                "2xl": "3rem"
            },
            "typography": {
                "line-height": {
                    "tight": 1.25,
                    "normal": 1.5,
                    "relaxed": 1.75
                }
            }
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--white)",
            "text": "var(--wp--preset--color--dark)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--system)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.6"
        },
        "spacing": {
            "blockGap": "1.5rem"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontSize": "2.25rem",
                    "fontWeight": "700",
                    "lineHeight": "1.25"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "1.875rem",
                    "fontWeight": "700",
                    "lineHeight": "1.25"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "1.5rem",
                    "fontWeight": "600",
                    "lineHeight": "1.25"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "1.25rem",
                    "fontWeight": "600",
                    "lineHeight": "1.25"
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--primary-dark)"
                    }
                }
            },
            "button": {
                "border": {
                    "radius": "0.5rem"
                },
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--white)"
                },
                "typography": {
                    "fontWeight": "500"
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--primary-dark)"
                    }
                }
            }
        },
        "blocks": {
            "core/quote": {
                "border": {
                    "left": {
                        "color": "var(--wp--preset--color--primary)",
                        "width": "4px",
                        "style": "solid"
                    }
                },
                "color": {
                    "background": "var(--wp--preset--color--light)"
                },
                "spacing": {
                    "padding": {
                        "left": "1.5rem",
                        "top": "1rem",
                        "bottom": "1rem",
                        "right": "1rem"
                    }
                }
            },
            "core/code": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--mono)"
                },
                "color": {
                    "background": "var(--wp--preset--color--light)"
                },
                "spacing": {
                    "padding": {
                        "top": "1rem",
                        "bottom": "1rem",
                        "left": "1rem",
                        "right": "1rem"
                    }
                },
                "border": {
                    "radius": "0.5rem"
                }
            },
            "core/separator": {
                "border": {
                    "color": "var(--wp--preset--color--light)"
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "header",
            "title": "Header",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "Footer",
            "area": "footer"
        }
    ],
    "customTemplates": [
        {
            "name": "page-full-width",
            "title": "Full Width Page",
            "postTypes": ["page"]
        },
        {
            "name": "page-no-title",
            "title": "Page Without Title",
            "postTypes": ["page"]
        }
    ]
}
